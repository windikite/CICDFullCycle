{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,  // This enables the default import syntax for CommonJS modules
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx"
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  